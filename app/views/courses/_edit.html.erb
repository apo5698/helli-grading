<% if @course.id %>
  <% title = "Edit #{@course}" %>
<% else %>
  <% title = 'Add a new course' %>
<% end %>
<div class="modal-header">
  <h5 class="modal-title"><%= title %></h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<%= form_with model: @course do |f| %>
  <div class="modal-body">
    <%= render partial: '/layouts/modal_flash' %>
    <fieldset>
      <div class="form-group row">
        <%= f.label :term, "Term", class: "col-lg-2 col-form-label" %>
        <div class="col-lg-10">
          <%= f.select :term, future_terms, {}, {class: 'form-control'} %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-lg-8">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group col-lg-4">
          <%= f.label :section, "Section" %>
          <%= f.text_field :section, class: "form-control" %>
        </div>
      </div>
    </fieldset>
  </div>
  <div class="modal-footer">
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
  </div>
<% end %>
